<%- include ('../partials/header')  %>

    <div class="wrapper">
        <div class="loginContainer">
            <h1>Register</h1>
            <p><%= message %> </p> 
            <form id="formRegister" method="POST" action="/register" onsubmit="validatePassword()">
                <div class="form-group">
                  <input type="text" class="form-control my-2" id="username" name="username" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                  </div>
                <div class="form-group">
                  <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="confirmpassword" name="confirmpassword" placeholder="Password Confirm" required>
                  </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
              <small class="form-text"><a href="/login"> Already have Account, Login Here</a></small>
        </div>
    </div>
   

<%- include ('../partials/footer')  %>